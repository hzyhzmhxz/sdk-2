<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintTop_toTopOf="parent"
    >
    <ImageView
        android:id="@+id/newproduct_img"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_150"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:src="@mipmap/newproduct"></ImageView>
    <TextView
        android:id="@+id/newproduct_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:text="蔓越曲奇饼干 200克"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:layout_marginRight="@dimen/dp_20"
        android:textSize="@dimen/dp_10"></TextView>
    <TextView
        android:id="@+id/newproduct_retail_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_5"
        android:text="¥36.00"
        android:textColor="#ff00"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_gravity="center"
        android:layout_below="@id/brand_name"
        android:textSize="@dimen/dp_7"
        ></TextView>



</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>